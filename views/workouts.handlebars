{{!-- button with option to assign the workout to a particular day is underneath workout details--}}
<button id="assignDayBtn" style="font-family: 'Bebas Neue', cursive; transition: 0.5s; box-shadow: 0 3px rgb(104, 104, 104);" class="bg-white p-1 rounded-md text-3xl mt-5 ">Assign Day</button>
    <div class="text-center">
    <!-- ASSIGN DAYS FORM -->
        <form style="background-color: rgba(245, 244, 244, 0.63); width: 45em;" class="m-5 p-5 rounded-md m-auto mt-5"
            id="assignDay">
            <label style="font-family: 'Exo 2', sans-serif;" class="text-2xl">Which day(s) would you like to do this
                workout?</label>
            <br>
            <input class="m-2" type="checkbox" id="monday">
            <label>Monday</label>
            <br>
            <input class="m-2" type="checkbox" id="tuesday">
            <label>Tuesday</label>
            <br>
            <input class="m-2" type="checkbox" id="wednesday">
            <label>Wednesday</label>
            <br>
            <input class="m-2" type="checkbox" id="thursday">
            <label>Thursday</label>
            <br>
            <input class="m-2" type="checkbox" id="friday">
            <label>Friday</label>
            <br>
            <input class="m-2" type="checkbox" id="saturday">
            <label>Saturday</label>
            <br>
            <input class="m-2" type="checkbox" id="sunday">
            <label>Sunday</label>
            <br>
            <button style="font-family: 'Bebas Neue', cursive; transition: 0.5s; box-shadow: 0 4px rgb(104, 104, 104);"
                class="bg-white text-black rounded-md p-1 m-2 w-28 text-xl" type="submit">ASSIGN DAYS</button>
        </form>
    </div>

