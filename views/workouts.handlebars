{{!-- <h1 style="font-family: 'Black Ops One', cursive;" class="text-5xl text-white text-center mt-5">Workout Title</h1> --}}
<h1>{{workout_name}}</h1>

{{!-- add exercise button with input field to add a name of the exercise (arm curls, squats, etc--}}

 <div class="text-center">
        <form class="rounded-md mt-50 m-auto p-3 mt-5  "
            style="background-color: rgba(245, 244, 244, 0.63); width: 45em;" id="addExerciseForm">
            <input class="m-1 p-2 w-96 rounded" type="text" name="exercise" id="exerciseName" placeholder='"Deadlifts"'>
            <button style="font-family: 'Bebas Neue', cursive; transition: 0.5s; box-shadow: 0 3px rgb(104, 104, 104);"
                class="bg-white text-black p-1 rounded-md w-28 text-xl" name="exerciseNameButton"
                id="exerciseNameButton">ADD EXERCISE</button>
            <br>

            <!-- {{!-- these inputs appear when exercise name is added --}} -->
            <input placeholder="3" class="m-1 p-1 w-10 rounded" type="text" name="sets" id="addSets"><label
                style="font-family: 'Exo 2', sans-serif;" for="addSets">sets</label>
            <input placeholder="12" class="m-1 p-1 w-10 rounded" type="text" name="reps" id="addReps"><label
                style="font-family: 'Exo 2', sans-serif;" for="addReps">reps</label>
            <input placeholder="25" class="m-1 p-1 w-10 rounded" type="text" name="weightAmount"
                id="weightAmount"><label style="font-family: 'Exo 2', sans-serif;" for="weightAmount">Weight
                (lbs)</label>
            <br>
            <button style="font-family: 'Bebas Neue', cursive; transition: 0.5s; box-shadow: 0 3px rgb(104, 104, 104);"
                class="bg-white p-1 rounded-md text-xl mt-1" id="saveExercise">ADD TO WORKOUT</button>
        </form>
    </div>

